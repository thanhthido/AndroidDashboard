<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_wifi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_wifi_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_wifi"
        app:layout_constraintTop_toTopOf="@id/img_wifi"
        tools:text="WIFI name" />

    <TextView
        android:id="@+id/tv_wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_wifi_name"
        app:layout_constraintTop_toBottomOf="@id/tv_wifi_name"
        tools:text="WIFI strength" />

</androidx.constraintlayout.widget.ConstraintLayout>